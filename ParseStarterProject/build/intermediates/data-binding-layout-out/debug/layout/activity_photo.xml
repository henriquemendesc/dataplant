<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.parse.starter.activity.PhotoActivity">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="22dp"
        android:clickable="true"
        android:src="@drawable/galeria" />

    <TextView
        android:id="@+id/txtNamePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPhoto"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/nome_photo"
        android:textColor="@color/preto"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edtNamePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNamePhoto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/hint_desc_photo"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:textColor="@color/preto"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtTitlePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNamePhoto"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/desc_photo"
        android:textColor="@color/preto"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitlePhoto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/hint_desc_photo"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:textColor="@color/preto"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_custom_drawable"
        android:text="@string/salvar_string"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>
